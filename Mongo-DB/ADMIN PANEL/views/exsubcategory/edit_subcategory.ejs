<%- include('../header') %>
    <!-- Content Start -->
    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <% if(locals.message?.success) {%>
                    <div class="alert alert-success" role="alert">
                        <%= locals.message?.success %>
                    </div>
                    <% } %>
                        <div class="bg-secondary rounded h-100 p-4 ">
                            <h4 align="center" style="font-weight: 500; letter-spacing: 0.19rem; " class="mb-4 ">Add
                                Sub_Category</h4>
                            <form method="post" action="/subcategory/updatesubcategory">
                                <input type="hidden" value="<%= single?.id %>" name="editid">
                                <div class="mb-3">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                        Category</label>
                                    <div class="col-md-12">
                                        <select name="category" class="form-control">
                                            <option>---select category---</option>
                                            <% category.map((val)=>{ %>
                                                <option <% if(val?.category==single?.categoryId?.category){ %>
                                                    selected
                                                    <% } %>
                                                        value="<%= val?.id %>">
                                                            <%= val?.category %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Sub_Category Name</label>
                                    <input type="text" placeholder="Enter Sub_Category Name" class="form-control"
                                        placeholder="Enter Category" name="subcategory" aria-describedby="emailHelp"
                                        value="<%= single.subcategory %>">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
            </div>

        </div>
    </div>
    <!-- Form End -->
    <%- include('../footer') %>