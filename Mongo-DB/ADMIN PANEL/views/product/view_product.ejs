<%- include('../header') %>
    </nav>
    <div class="d-flex mt-5 ms-5 mb-5">
        <div class="col-sm-12 col-xl-10 m-auto mt-5">
            <% if(locals.message?.success) { %>
                <div class="alert alert-success w-50">
                    <%= locals.message?.success %>
                </div>
            <% } %>
            <div class="bg-secondary rounded p-5">
                <h4 align="center" style="font-weight: 500; letter-spacing: 0.19rem;" class="mb-4">
                    Ex_Subcategory Cards</h4>
                
                <div class="row">
                    <% product.map((val, index) => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="/<%= val.image %>" class="card-img-top" alt="<%= val?.product %>" width="100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= val?.product %></h5>
                                    <p class="card-text">
                                        <strong>Category:</strong> <%= val?.categoryId?.category %><br>
                                        <strong>Sub_Category:</strong> <%= val?.subcategoryId?.subcategory %><br>
                                        <strong>Ex_Subcategory:</strong> <%= val?.exsubcategoryId?.exsubcategory %><br>
                                        <strong>Price:</strong> $<%= val?.price %><br>
                                        <strong>Quantity:</strong> <%= val?.qty %>
                                    </p>
                                    <div class="d-flex justify-content-between">
                                        <a href="/exsubcategory/deleteexsubcategory?id=<%= val?.id %>" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete</a>
                                        <a href="/exsubcategory/editexsubcategory?id=<%= val?.id %>" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i> Edit</a>
                                        <a href="/exsubcategory/changestatus?id=<%= val?.id %>&status=<%= val?.status === 'active' ? 'active' : 'deactive' %>" class="btn <%= val?.status === 'active' ? 'btn-success' : 'btn-warning' %> btn-sm">
                                            <%= val?.status %>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    
